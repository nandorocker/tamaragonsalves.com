---
// Redirect old single-page route to new multi-page structure
import { getStaticPaths } from '../utils/i18n';

export { getStaticPaths };

const { lang } = Astro.params;
---

<script define:vars={{ lang }}>
  // Redirect to the language-specific index page
  window.location.href = `/${lang}/`;
</script>

<meta http-equiv="refresh" content={`0; url=/${lang}/`}>
